@model TrabalhoAV1.Models.Estado

@{
    ViewData["Title"] = "Criar Estado";
}

<div class="container mt-4">
    <h2 class="mb-4">Criar Novo Estado</h2>

    <form asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Sigla" class="form-label"></label>
                    <input asp-for="Sigla" class="form-control" />
                    <span asp-validation-for="Sigla" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Criar Estado" class="btn btn-primary w-100" />
                </div>
            </div>
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
