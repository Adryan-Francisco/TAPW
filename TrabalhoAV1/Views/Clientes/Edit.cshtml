@model TrabalhoAV1.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Cliente</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Hidden Field for ClienteId -->
                <input type="hidden" asp-for="ClienteId" />

                <!-- Nome -->
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Sexo -->
                <div class="form-group mb-3">
                    <label asp-for="Sexo" class="form-label"></label>
                    <input asp-for="Sexo" class="form-control" placeholder="Digite o sexo do cliente" />
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <!-- Idade -->
                <div class="form-group mb-3">
                    <label asp-for="Idade" class="form-label"></label>
                    <input asp-for="Idade" class="form-control" placeholder="Digite a idade do cliente" />
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>

                <!-- Data de Cadastro -->
                <div class="form-group mb-3">
                    <label asp-for="DateOnly" class="form-label"></label>
                    <input asp-for="DateOnly" class="form-control" type="date" />
                    <span asp-validation-for="DateOnly" class="text-danger"></span>
                </div>

                <!-- Cidade -->
                <div class="form-group mb-3">
                    <label asp-for="CidadeId" class="form-label"></label>
                    <select asp-for="CidadeId" class="form-control" asp-items="ViewBag.CidadeId">
                        <option value="">Selecione uma cidade</option>
                    </select>
                    <span asp-validation-for="CidadeId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar para a Lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
