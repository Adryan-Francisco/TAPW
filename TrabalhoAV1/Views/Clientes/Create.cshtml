@model TrabalhoAV1.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="container mt-4">
    <h2 class="mb-4">Cadastrar Novo Cliente</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Sexo" class="form-label">Sexo</label>
                    <select asp-for="Sexo" class="form-select">
                        <option value="">-- Selecione --</option>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Idade" class="form-label">Idade</label>
                    <input asp-for="Idade" class="form-control" placeholder="Digite a idade" />
                    <span asp-validation-for="Idade" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateOnly" class="form-label">Data de Cadastro</label>
                    <input asp-for="DateOnly" class="form-control" type="date" />
                    <span asp-validation-for="DateOnly" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CidadeId" class="form-label">Cidade</label>
                    <select asp-for="CidadeId" class="form-select" asp-items="ViewBag.CidadeId">
                        <option value="">-- Selecione uma cidade --</option>
                    </select>
                    <span asp-validation-for="CidadeId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
