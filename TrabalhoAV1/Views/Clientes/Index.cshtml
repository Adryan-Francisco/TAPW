@model IEnumerable<TrabalhoAV1.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <h2 class="mb-4">Lista de Clientes</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Novo Cliente
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Sexo)</th>
                <th>@Html.DisplayNameFor(model => model.Idade)</th>
                <th>@Html.DisplayNameFor(model => model.DateOnly)</th>
                <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Idade)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateOnly)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cidade.Nome)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
