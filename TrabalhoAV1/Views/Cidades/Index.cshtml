@model IEnumerable<TrabalhoAV1.Models.Cidade>

@{
    ViewData["Title"] = "Lista de Cidades";
}

<div class="container mt-4">
    <h2 class="mb-4">Cidades</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nova Cidade
        </a>
    </p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado.Nome)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CidadeId" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CidadeId" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-info-circle"></i> Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CidadeId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
