@model TrabalhoAV1.Models.Cidade

@{
    ViewData["Title"] = "Detalhes da Cidade";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalhes da Cidade</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado.Nome)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list"></i> Voltar para a Lista
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.CidadeId" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>
